<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div>
    <aside >
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div>
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <h1>Welcome to the Sample App</h1>

  <%= link_to "Sign up now!", signup_path %>
<% end %>
